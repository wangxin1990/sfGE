
{% block body %}
    {% if error is defined and error %}
        <span>{{ error }}</span>
    {% endif %}
   <head>
	<meta charset="UTF-8">
	<title>通用考试系统</title>
{% block my_js %}
	{% javascripts '@AppBundle/Resources/public/js/*' %}
    <script type="test/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block my_css %}
	{% stylesheets 'bundles/app/css/*' filter='cssrewrite' %}
	<link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% endblock %}
</head>
<body>
	<div class="logo"><span><a href="http://ustc.edu.cn">USTC</a> | 在线通用考试系统</span></div>
	<div id="container">
		<div id="bg">
				<div id="login">
					<form class="form-horizontal" role="form" action="{{ path("fos_user_security_check") }}" method="post">
						<div id="title" class="form-group">
							<span>系统登录 || LOGIN</span>
						</div>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
						<div class="form-group ">
							<label for="username" {{ 'security.login.username'|trans }} class=" col-sm-3 control-label label">&nbsp;&nbsp;用户名:</label>
							<div class="col-sm-8">
								<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="请输入用户名" class="form-control input-lg"/>
							</div>
							
						</div>
						<div class="form-group">
							<label for="password" {{ 'security.login.password'|trans }} class="col-sm-3 control-label label">&nbsp;&nbsp;密&nbsp;&nbsp;码:</label>
							<div class="col-sm-8">
								<input type="password" id="password" name="_password" required="required"  placeholder="请输入密码" class="form-control input-lg" />
							</div>	
						</div>
						<div id="info" class="col-sm-offset-4 col-sm-8">用户名或密码不正确</div>
						<div class="form-group radio">
							<div class="col-sm-offset-2 col-sm-10">
								
								<label class="radio-inline label_form"><input type="radio" name="role" value="student">学生</label>
								<label class="radio-inline label_form"><input type="radio" name="role" value="teacher">教师</label>
								<label class="radio-inline label_form"><input type="radio" name="role" value="manager" checked>管理员</label>
							</div>	
						</div>
						<div class="form-group checkbox">
							<div class="col-sm-offset-1 col-sm-11">
								<label class="checkbox-inline rem_paswd label_form"><input type="checkbox" name="rem_paswd" checked>记住密码</label>
							</div>
						</div>
						
						
						<div class="form-group button">	
							<div class="col-sm-offset-3 col-sm-9">
								<button class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}">登录</button>
								<button class="btn btn-primary reset_btn" type="reset">重置</button>
								
							</div>
						</div>
					</form>
				</div>
		</div>
	</div>
</body>
{% endblock body %}